<h1>Listing problems</h1>

<table>
  <tr>
    <th>Problem desc</th>
    <th>Problem type</th>
    <th>Thing</th>
    <th>Sent</th>
    <th>Resolved</th>
    <th>From user</th>
    <th>To user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= problem.problem_desc %></td>
    <td><%= problem.problem_type_id %></td>
    <td><%= problem.thing_id %></td>
    <td><%= problem.sent %></td>
    <td><%= problem.resolved %></td>
    <td><%= problem.from_user_id %></td>
    <td><%= problem.to_user_id %></td>
    <td><%= link_to 'Show', problem %></td>
    <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
    <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

